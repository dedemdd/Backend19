generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_2")
}


model Equipo {
  id                 String    @id @default(uuid()) @db.Uuid
  nombre             String    @unique
  imagen             String?
  jugadores          Jugador[]
  partidosLocales    Partido[] @relation(name: "equipo_local")
  partidosVisitantes Partido[] @relation(name: "equipo_visitante")
  
  @@map("equipos")
}

model Jugador {
  id              String   @id @default(uuid()) @db.Uuid
  nombre          String
  posicion        String?
  fechaNacimiento DateTime @map("fecha_nacimiento") @db.Date
  equipoId        String   @map("equipo_id") @db.Uuid
  equipo          Equipo   @relation(references: [id], fields: [equipoId], onDelete: Restrict)

  @@map("jugadores")
}

model Fecha {
  id      String    @id @default(uuid()) @db.Uuid
  nombre  String    @unique
  Partido Partido[]

  @@map("fechas")
}

model Usuario {
  id       String      @id @default(uuid()) @db.Uuid
  email    String      @unique
  password String
  rol      USUARIO_ROL @default(CLIENTE)

  @@map("usuarios")
}

model Partido {
  id                String         @id @default(uuid()) @db.Uuid
  fechaId           String         @map("fecha_id") @db.Uuid
  equipoLocalId     String         @map("equipo_local_id") @db.Uuid
  equipoVisitanteId String         @map("equipo_visante_id") @db.Uuid
  fechaPartido      DateTime       @map("fecha_partido") @db.Date
  hora              DateTime       @db.Time()
  lugar             String
  estado            PARTIDO_ESTADO @default(POR_EMPEZAR)
  marcadorLocal     Int            @map("marcador_local")
  marcadorVisitante Int            @map("marcador_visitante")

  //RELACIONES
  fecha           Fecha  @relation(fields: [fechaId], references: [id])
  equipoLocal     Equipo @relation(fields: [equipoLocalId], references: [id], name: "equipo_local")
  equipoVisitante Equipo @relation(fields: [equipoVisitanteId], references: [id], name: "equipo_visitante")

 
}

enum USUARIO_ROL {
  ADMINISTRADOR
  CLIENTE
}

enum PARTIDO_ESTADO {
  POR_EMPEZAR
  EMPEZADO
  FINALIZADO
  SUSPENDIDO
}
